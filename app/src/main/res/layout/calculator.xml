<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3">


    <Button
        android:id="@+id/vback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="B"
        app:layout_constraintBaseline_toBaselineOf="@+id/vhistory"
        app:layout_constraintStart_toEndOf="@+id/vhistory" />

    <Button
        android:id="@+id/vtan"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="Tan"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vsin"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/vpower"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="^"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum1"
        app:layout_constraintStart_toStartOf="@+id/vfactorial" />

    <Button
        android:id="@+id/vclean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="C"
        app:layout_constraintBaseline_toBaselineOf="@+id/vhistory"
        app:layout_constraintStart_toEndOf="@+id/vsin" />

    <Button
        android:id="@+id/vequal"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="?android:attr/colorBackground"
        android:text="="
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum0"
        app:layout_constraintStart_toEndOf="@+id/vnum0" />

    <Button
        android:id="@+id/vdivide"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="/"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vequal"
        app:layout_constraintStart_toEndOf="@+id/vequal" />

    <Button
        android:id="@+id/vdot"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vpower"
        app:layout_constraintTop_toBottomOf="@+id/vpower" />


    <Button
        android:id="@+id/vpi"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="PI"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vdot"
        app:layout_constraintStart_toStartOf="@+id/vpower" />

    <Button
        android:id="@+id/vnum1"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/colorBackground"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vfactorial"
        app:layout_constraintTop_toBottomOf="@+id/vfactorial" />

    <Button
        android:id="@+id/vnum2"
        style="?android:textAppearanceSmall"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        android:background="?android:attr/colorBackground"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum1"
        app:layout_constraintEnd_toEndOf="@+id/vequal"
        app:layout_constraintStart_toStartOf="@+id/vdot" />

    <Button
        android:id="@+id/vnum3"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:background="?android:attr/colorBackground"
        android:text="3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/vnum0"
        app:layout_constraintStart_toEndOf="@+id/vnum0"
        app:layout_constraintTop_toTopOf="@+id/vsubtraction" />

    <Button
        android:id="@+id/vnum4"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="4"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vnegative"
        app:layout_constraintTop_toBottomOf="@+id/vnegative" />

    <Button
        android:id="@+id/vnum5"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum4"
        app:layout_constraintStart_toEndOf="@+id/vnum1" />

    <Button
        android:id="@+id/vnum6"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vnum2"
        app:layout_constraintTop_toBottomOf="@+id/vpuls" />

    <Button
        android:id="@+id/vnum7"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vtan"
        app:layout_constraintTop_toBottomOf="@+id/vtan" />

    <Button
        android:id="@+id/vnum8"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum7"
        app:layout_constraintStart_toEndOf="@+id/vsin" />

    <Button
        android:id="@+id/vnum9"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/vnum5"
        app:layout_constraintTop_toBottomOf="@+id/vright" />

    <Button
        android:id="@+id/vsin"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="197dp"
        android:background="?android:attr/colorBackground"
        android:text="Sin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vtan" />

    <Button
        android:id="@+id/vcos"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="Cos"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vsin"
        app:layout_constraintStart_toEndOf="@+id/vsin" />

    <Button
        android:id="@+id/left"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="("
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/vhistory"
        app:layout_constraintTop_toBottomOf="@+id/vback" />

    <Button
        android:id="@+id/vright"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text=")"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/left"
        app:layout_constraintStart_toStartOf="@+id/vback" />

    <Button
        android:id="@+id/vpuls"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum9"
        app:layout_constraintStart_toStartOf="@+id/vright" />

    <Button
        android:id="@+id/vnum0"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/colorBackground"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vdot"
        app:layout_constraintStart_toEndOf="@+id/vdot" />

    <Button
        android:id="@+id/vsubtraction"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="-"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum6"
        app:layout_constraintStart_toStartOf="@+id/vpuls" />

    <Button
        android:id="@+id/vmultiplication"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="*"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum3"
        app:layout_constraintStart_toEndOf="@+id/vequal" />

    <Button
        android:id="@+id/vnegative"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="(-)"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum7"
        app:layout_constraintStart_toStartOf="@+id/vtan" />

    <Button
        android:id="@+id/vfactorial"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="!"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/vnum4"
        app:layout_constraintStart_toStartOf="@+id/vnegative" />

    <TextView
        android:id="@+id/vinput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="?android:attr/colorBackground"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/vback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:text="History"
        app:layout_constraintBottom_toTopOf="@+id/vcos"
        app:layout_constraintStart_toEndOf="@+id/vclean" />


</android.support.constraint.ConstraintLayout>